<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display"
    android:orientation="vertical"
    android:background="@color/White"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b7"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textStyle="bold"
            android:textSize="@android:dimen/app_icon_size" />

        <Button
            android:id="@+id/b8"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b9"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"


            >


        </Button>

        <Button
            android:id="@+id/bdel"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="DEl"
            android:textColor="@color/colorPrimary"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b4"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b5"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b6"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="@android:dimen/app_icon_size"

            android:textStyle="bold" />

        <Button
            android:id="@+id/bce"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="AC"
            android:textColor="@color/colorPrimary"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b2"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />


        <Button
            android:id="@+id/b3"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bdived"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="@color/Orange"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bsub"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/Orange"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bdot"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b0"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bequal"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/blue"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bmul"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="@color/Orange"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bsum"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:text="+"
            android:textColor="@color/Orange"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>